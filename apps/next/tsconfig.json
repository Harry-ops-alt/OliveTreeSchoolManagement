{
  "extends": "@olive/config/tsconfig/next",
  "compilerOptions": {
    "moduleResolution": "bundler",
    "jsx": "preserve",
    "types": [],
    "incremental": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
